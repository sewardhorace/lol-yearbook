<div class="row">

<% grades = {Seniors: 5, Juniors: 4, Sophomores: 3, Freshmen: 2} %>
<% grades.each do |key, val| %>

<div class="col-xs-12" id="_<%= val %>">
  <h4 class="grade-label"><%= key %></h4>
  <% champs = champions.where(mastery_level: val).order(mastery_points: :desc) %>
  <% if champs.empty? %>
    <p class="text-center">none to display</p>
  <% else %>
    <% champs.each do |champ| %>
      <%= render partial: "champion_thumb", locals:{champion: champ, url: champion_path(region, champ.summoner_id, champ.champion_id)} %>
    <% end %>
  <% end %>
</div>

<% end %>

</div>
