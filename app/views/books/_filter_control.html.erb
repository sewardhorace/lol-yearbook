    </button>
    <ul class="dropdown-menu">
      <li>
        <input
          type="button"
          class="btn btn-default"
          data-grade="5"
          data-url="<%= champions_path %>"
          value="Seniors">
        </li>
      <li>
        <input
          type="button"
          class="btn btn-default"
          data-grade="4"
          data-url="<%= champions_path %>"
          value="Juniors">
        </li>
      <li>
        <input
          type="button"
          class="btn btn-default"
          data-grade="3"
          data-url="<%= champions_path %>"
          value="Sophomores">
      </li>
      <li>
        <input
          type="button"
          class="btn btn-default"
          data-grade="2"
          data-url="<%= champions_path %>"
          value="Freshmen">
      </li>
    </ul>
  </div>
</div>
