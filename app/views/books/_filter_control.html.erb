<div class="level-selectors">
  <div class="btn-group hidden-xs" role="group">
    <input
      type="button"
      class="btn btn-default"
      data-grade="2"
      data-url="<%= champions_path %>"
      value="Freshmen">
    <input
      type="button"
      class="btn btn-default"
      data-grade="3"
      data-url="<%= champions_path %>"
      value="Sophomores">
    <input
      type="button"
      class="btn btn-default"
      data-grade="4"
      data-url="<%= champions_path %>"
      value="Juniors">
    <input
      type="button"
      class="btn btn-default active"
      data-grade="5"
      data-url="<%= champions_path %>"
      value="Seniors">
  </div>
  <div class="btn-group visible-xs">
