<div class="comment" id="comment-<%=comment.id%>">
  <p><%= comment.text %></p>
  <div class="signature">
    <% if comment.author == current_user then %>
      <span>
        <input
          type="button"
          data-id="<%= comment.id %>"
          name="<%= comment.id %>"
          value="Delete"
          class="delete-btn btn btn-default btn-sm"
        >
      </span>
    <% end %>
    <span class="time"><%= time_ago_in_words(comment.created_at) %> ago</span>
    <span>
      <a href="<%= comment.author.url %>"><%= comment.author.name %></a>
    </span>
    <span><%= image_tag comment.author.img_url, class: "twitter-pic" %></span>
  </div>
</div>
